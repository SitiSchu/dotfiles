{{ end -}}

{{ end -}}

if which promptum; then
    export PS1='`promptum`'
    export PS2=" "
fi
export HISTCONTROL=ignoreboth:erasedups

export PATH="~/.cargo/bin:~/go/bin:~/.local/share/JetBrains/Toolbox/scripts:~/.local/bin:$PATH"
export EDITOR='vim'

alias ls='ls --color=auto'
alias la='ls -Aslh'
alias grep='grep --color=auto'
alias df='df -h'
alias du='du -h'

alias cm='chezmoi'
